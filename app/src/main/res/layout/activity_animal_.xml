<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/numberbackground"
    tools:context=".animal_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:onClick="goBack"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:layout_margin="10dp"
            android:src="@drawable/arrow">

        </ImageView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_height="0dp"
            android:layout_width="match_parent"

            android:orientation="horizontal"
          >

            <ImageView
                android:id="@+id/elephant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/elephant"></ImageView>
            <ImageView
                android:id="@+id/chicken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/chicken"></ImageView>
            <ImageView
                android:id="@+id/cat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cat"></ImageView>

            <ImageView
                android:id="@+id/sheep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sheep"></ImageView>




        </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="match_parent"

        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/snake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/snake"></ImageView>
        <ImageView
            android:id="@+id/wolf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wolf"></ImageView>
        <ImageView
            android:id="@+id/lion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/lion"></ImageView>
        <ImageView
            android:id="@+id/monkey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/monkey"></ImageView>
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:orientation="horizontal"


            >

            <ImageView
                android:id="@+id/horse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/horse"></ImageView>

            <ImageView
                android:id="@+id/dog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:src="@drawable/dog">

            </ImageView>


            <ImageView

                android:id="@+id/duck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/duck">

            </ImageView>

            <ImageView
                android:id="@+id/hippo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hippo">

            </ImageView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>