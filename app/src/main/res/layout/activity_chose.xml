<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/popimage"
    android:layout_height="match_parent"
    tools:context=".chose">
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentRight="true"
    android:layout_margin="10dp"
    android:onClick="closeApp"
        android:src="@drawable/close"></ImageView>
<LinearLayout
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/color"
        android:onClick="colorFun"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:src="@drawable/color"
        ></ImageView>

    <ImageView
        android:id="@+id/animals"
        android:onClick="animalFun"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:src="@drawable/animall"
        android:layout_marginLeft="5dp"
        >
    </ImageView>
    <ImageView
        android:id="@+id/num"
        android:onClick="numberFun"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:src="@drawable/num"
        android:layout_marginLeft="5dp"
        >
    </ImageView>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fruit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"
           android:onClick="fruitFun"

            android:src="@drawable/fruit">

        </ImageView>
        <ImageView

            android:id="@+id/letter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="120dp"
             android:onClick="letterFun"
            android:src="@drawable/letter">

        </ImageView>
        <ImageView

            android:id="@+id/transport"
            android:onClick="transportFun"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:src="@drawable/transport">

        </ImageView>

    </LinearLayout>
</LinearLayout>


</RelativeLayout>